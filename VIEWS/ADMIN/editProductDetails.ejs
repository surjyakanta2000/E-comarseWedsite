<body>
    <%- include('../INCLUDES/adminNav.ejs') %>
<main>
    <section class="glass">
        
        <form action="/admin/productEdit" method="POST"> 
            <h1 style="color:#6cdbed;">Edit-Product</h1>
            <input class="bg-transparent text-white" style="width: 100%;height: 2rem;" type="hidden"  name="product_id" value="<%=data._id %>" placeholder="image">
            <p class="text-left"  style="font-weight: bold;font-size:1.5rem;color:#6cdbed">Title:</p>
            <input class="bg-transparent text-white" style="width: 100%;height: 2rem;" type="text"  name="title" value="<%=data._title %>" placeholder="Title">
            <p class="text-left" style="font-weight: bold;font-size:1.5rem;color:#6cdbed">Description:</p>
            <input class="bg-transparent text-white" style="width: 100%;height: 2rem;" type="text"  name="description" value="<%=data._description %>" placeholder="Description">
            <p class="text-left" style="font-weight: bold;font-size:1.5rem;color:#6cdbed">price:</p>
            <input class="bg-transparent text-white" style="width: 100%;height: 2rem;" type="text"  name="price" value="<%=data._price%>" placeholder="Price">
            <p class="text-left"  style="font-weight: bold;font-size:1.5rem;color:#6cdbed">Image:</p>
            <input class="bg-transparent text-white" style="width: 100%;height: 2rem;" type="text"  name="image" value="<%=data._image %>" placeholder="image">
            <button type="submit" class="btn btn-outline-info text-center ml-7" style="width: 80%;margin-top:2rem;" name="submit" value="Save Change">Save Change</button>
        </form>
    </section>
  </main>
